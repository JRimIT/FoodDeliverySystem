<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Settings</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap & FontAwesome -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/settings.css" />
    <link rel="stylesheet" href="/css/navbar.css" />
  </head>

  <body>
    <%- include('../partials/navbar.ejs') %>

    <div class="settings-wrapper container mt-5 pt-5">
      <div class="row">
        <!-- Sidebar Menu -->
        <div class="col-md-4 col-lg-3">
          <h4>Settings</h4>
          <ul class="list-group settings-menu mt-4">
            <li class="list-group-item active" data-tab="account">
              <i class="fas fa-user"></i> Account Details
            </li>
            <li class="list-group-item" data-tab="payment">
              <i class="fas fa-credit-card"></i> Payment Methods
            </li>
            <li class="list-group-item" data-tab="delivery">
              <i class="fas fa-box"></i> Delivery Addresses
            </li>
            <li class="list-group-item" data-tab="shop">
              <i class="fas fa-store"></i> Shop Preferences
            </li>
            <li class="list-group-item" data-tab="communication">
              <i class="fas fa-envelope"></i> Communication Preferences
            </li>
            <li class="list-group-item" data-tab="privacy">
              <i class="fas fa-user-shield"></i> Privacy
            </li>
            <li class="list-group-item" data-tab="visibility">
              <i class="fas fa-eye"></i> Profile Visibility
            </li>
            <li class="list-group-item" data-tab="linked">
              <i class="fas fa-link"></i> Linked Accounts
            </li>
            <li class="list-group-item" data-tab="wallet">
              <i class="fas fa-wallet"></i> Wallet
            </li>
          </ul>
        </div>

        <!-- Content Area -->
        <div class="col-md-8 col-lg-9">
          <div class="tab-content">
            <div class="tab-pane active" id="account">
              <h5>Account Details</h5>
              <form
                id="accountForm"
                method="POST"
                action="/profile/updateAccount"
                enctype="multipart/form-data"
              >
                <!-- Avatar -->
                <div class="text-center mb-4">
                  <div class="position-relative d-inline-block">
                    <img
                      src="<%= user.avatarUrl %>"
                      alt="Avatar"
                      class="rounded-circle"
                      width="120"
                      height="120"
                      style="object-fit: cover; border: 3px solid #ccc"
                    />
                    <button
                      type="button"
                      class="btn btn-sm btn-light position-absolute bottom-0 end-0"
                      data-bs-toggle="modal"
                      data-bs-target="#avatarModal"
                    >
                      <i class="fas fa-edit"></i>
                    </button>
                  </div>
                </div>

                <!-- Full Name -->
                <div class="mb-3">
                  <label>Full Name</label>
                  <input
                    type="text"
                    name="fullName"
                    class="form-control"
                    value="<%= user.fullName || '' %>"
                    disabled
                  />
                </div>

                <!-- Email -->
                <div class="mb-3">
                  <label>Email</label>
                  <input
                    type="email"
                    name="email"
                    class="form-control"
                    value="<%= user.email || '' %>"
                    disabled
                  />
                </div>

                <!-- Password -->
                <div class="mb-3">
                  <label>Password</label>
                  <input
                    type="password"
                    name="password"
                    class="form-control"
                    placeholder="••••••••"
                    disabled
                  />
                </div>

                <!-- Phone -->
                <div class="mb-3">
                  <label>Phone</label>
                  <input
                    type="text"
                    name="phone"
                    class="form-control"
                    value="<%= user.phone || '' %>"
                    disabled
                  />
                </div>
                <div class="mb-3">
                  <label>Số dư ví</label>
                  <input type="text" class="form-control" value="<%= user.balance?.toLocaleString() || 0 %> VND" disabled />
                </div>
                <div class="mb-3">
                  <label>Address</label>
                  <input
                    type="text"
                    name="address"
                    class="form-control"
                    value="<%= user.address || '' %>"
                    disabled
                  />
                </div>

                <!-- Post Code -->
                <div class="mb-3">
                  <label>Post Code</label>
                  <input
                    type="text"
                    name="postCode"
                    class="form-control"
                    value="<%= user.postCode || '' %>"
                    disabled
                  />
                </div>

                <!-- Date of Birth -->
                <div class="mb-3">
                  <label>Date of Birth</label>
                  <input
                    type="date"
                    name="dateOfBirth"
                    class="form-control"
                    value="<%= user.dateOfBirth ? user.dateOfBirth.toISOString().split('T')[0] : '' %>"
                    disabled
                  />
                </div>

                <!-- Buttons -->
                <div class="mt-4 d-flex justify-content-end">
                  <button
                    type="button"
                    id="editAll"
                    class="btn btn-outline-primary me-2"
                  >
                    Edit All
                  </button>
                  <button
                    type="submit"
                    id="saveChanges"
                    class="btn btn-success d-none"
                  >
                    Save Changes
                  </button>
                  <button
                    type="button"
                    id="cancelChanges"
                    class="btn btn-secondary d-none"
                  >
                    Cancel
                  </button>
                </div>
              </form>
            </div>

            <div class="tab-pane" id="payment">
              <h5>Saved Payment Methods</h5>
              <button class="btn btn-dark rounded-pill mt-3 px-4 py-2 fw-bold">
                Payment Options
              </button>
            </div>

            <div class="tab-pane" id="delivery">
              <h5>Delivery Addresses</h5>
              <p>Manage your delivery addresses here.</p>
            </div>

            <div class="tab-pane" id="shop">
              <h5>Shop Preferences</h5>
              <p>Set your shop preferences here.</p>
            </div>

            <div class="tab-pane" id="communication">
              <h5>Communication Preferences</h5>
              <p>Choose how we contact you.</p>
            </div>

            <div class="tab-pane" id="privacy">
              <h5>Privacy</h5>
              <p>Privacy-related settings.</p>
            </div>

            <div class="tab-pane" id="visibility">
              <h5>Profile Visibility</h5>
              <p>Manage who can see your profile.</p>
            </div>

            <div class="tab-pane" id="linked">
              <h5>Linked Accounts</h5>
              <p>Manage linked social/media accounts here.</p>
            </div>

            <div class="tab-pane" id="wallet">
              <h5 class="mb-3">Wallet Balance</h5>
              <div class="d-flex align-items-center mb-4">
                <span class="badge bg-success fs-5 me-3">Balance: <%= user.balance?.toLocaleString() || 0 %> VND</span>
                <button class="btn btn-warning fw-bold" data-bs-toggle="modal" data-bs-target="#depositModal">
                  <i class="fas fa-plus-circle me-1"></i> Deposit
                </button>
              </div>
              <h6 class="mb-3">Transaction History</h6>
              <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                  <thead class="table-light">
                    <tr>
                      <th>Date</th>
                      <th>Type</th>
                      <th>Amount</th>
                      <th>Description</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (transactions && transactions.length > 0) { %>
                      <% transactions.forEach(tx => { %>
                        <tr>
                          <td><%= tx.createdAt ? tx.createdAt.toLocaleString() : '' %></td>
                          <td>
                            <% if (tx.type === 'deposit') { %>
                              <span class="badge bg-success">Deposit</span>
                            <% } else if (tx.type === 'payment') { %>
                              <span class="badge bg-danger">Payment</span>
                            <% } else { %>
                              <span class="badge bg-secondary"><%= tx.type %></span>
                            <% } %>
                          </td>
                          <td class="fw-bold <%= tx.type === 'deposit' ? 'text-success' : 'text-danger' %>">
                            <%= tx.amount.toLocaleString() %> VND
                          </td>
                          <td><%= tx.description || '' %></td>
                        </tr>
                      <% }) %>
                    <% } else { %>
                      <tr><td colspan="4" class="text-center">No transactions yet.</td></tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal Upload Avatar -->
    <div
      class="modal fade"
      id="avatarModal"
      tabindex="-1"
      aria-labelledby="avatarModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <form
          method="POST"
          action="/profile/uploadAvatar"
          enctype="multipart/form-data"
          class="modal-content"
        >
          <div class="modal-header">
            <h5 class="modal-title" id="avatarModalLabel">Update Avatar</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>
          <div class="modal-body">
            <input
              type="file"
              name="avatar"
              accept="image/*"
              class="form-control"
              required
            />
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>

    <%- include('../partials/footer.ejs') %>
    <script>
      const editBtn = document.getElementById("editAll");
      const saveBtn = document.getElementById("saveChanges");
      const cancelBtn = document.getElementById("cancelChanges");
      const inputs = document.querySelectorAll("#accountForm input");

      editBtn.addEventListener("click", () => {
        inputs.forEach((input) => (input.disabled = false));
        saveBtn.classList.remove("d-none");
        cancelBtn.classList.remove("d-none");
        editBtn.classList.add("d-none");
      });

      cancelBtn.addEventListener("click", () => {
        inputs.forEach((input) => (input.disabled = true));
        saveBtn.classList.add("d-none");
        cancelBtn.classList.add("d-none");
        editBtn.classList.remove("d-none");
      });
    </script>

    <!-- Bootstrap JS for modal functionality -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const tabs = document.querySelectorAll(".settings-menu .list-group-item");
      const panes = document.querySelectorAll(".tab-pane");

      tabs.forEach((tab) => {
        tab.addEventListener("click", () => {
          tabs.forEach((t) => t.classList.remove("active"));
          tab.classList.add("active");

          const targetId = tab.getAttribute("data-tab");
          panes.forEach((pane) => {
            pane.classList.remove("active", "animate__animated", "animate__fadeIn");
            if (pane.id === targetId) {
              pane.classList.add("active");
              setTimeout(() => {
                pane.classList.add("animate__animated", "animate__fadeIn");
              }, 10);
            }
          });
        });
      });
    </script>

    <!-- Deposit Modal (moved outside tab-content for proper Bootstrap behavior) -->
    <div class="modal fade" id="depositModal" tabindex="-1" aria-labelledby="depositModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="depositModalLabel">Deposit to Wallet</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form action="/wallet/deposit" method="POST">
            <div class="modal-body">
              <div class="mb-3">
                <label for="depositAmount" class="form-label">Amount (VND)</label>
                <input type="number" class="form-control" id="depositAmount" name="amount" min="1000" step="1000" required />
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="submit" class="btn btn-success">Deposit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <% if (typeof depositSuccess !== 'undefined') { %>
      <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 3000;">
        <div class="toast align-items-center text-bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
          <div class="d-flex">
            <div class="toast-body">
              <i class="fas fa-check-circle me-2"></i> Nạp tiền thành công!
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
          </div>
        </div>
      </div>
    <% } %>
  </body>
</html>
