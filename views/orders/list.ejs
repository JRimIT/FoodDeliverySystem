<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container" style="padding-top: 100px;">
  <div class="text-center mb-4">
    <h2><i class="fas fa-clipboard-list text-success"></i> Đơn hàng của tôi</h2>
    <p class="text-muted">Theo dõi đơn hàng và xác nhận đã nhận hàng.</p>
  </div>

  <% if (orders.length === 0) { %>
    <div class="alert alert-info text-center">Bạn chưa đặt đơn hàng nào.</div>
  <% } else { %>
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-light text-center">
          <tr>
            <th>Mã đơn</th>
            <th>Sản phẩm</th>
            <th>Tổng tiền</th>
            <th>Địa chỉ</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(o => { %>
            <tr>
              <td class="text-center"><%= o._id %></td>
              <td>
                <% o.items.forEach(item => { %>
                  <div class="d-flex align-items-center mb-2">
                    <img src="<%= item.productId?.imageUrl || '/default.jpg' %>" width="50" height="50" class="me-2 rounded border" />
                    <div>
                      <strong><%= item.productId?.name || 'Không rõ' %></strong><br>
                      x <%= item.quantity %> – 
                      <%= (item.productId?.price || 0).toLocaleString() %> VND
                    </div>
                  </div>
                <% }) %>
              </td>
              <td class="text-center"><%= o.totalPrice.toLocaleString() %> VND</td>
              <td><%= o.address %></td>
              <td class="text-center">
                <% if (o.status === 'Pending') { %>
                  <span class="badge bg-secondary">Chờ xử lý</span>
                <% } else if (o.status === 'Shipping') { %>
                  <span class="badge bg-warning text-dark">Đang giao</span>
                <% } else if (o.status === 'Delivered') { %>
                  <span class="badge bg-info text-dark">Đã giao</span>
                <% } else if (o.status === 'Completed') { %>
                  <span class="badge bg-success">Hoàn tất</span>
                <% } else if (o.status === 'Cancelled') { %>
                  <span class="badge bg-danger">Đã hủy</span>
                <% } else { %>
                  <span class="badge bg-dark"><%= o.status %></span>
                <% } %>
              </td>
              <td class="text-center">
                <% if (o.status === 'Delivered') { %>
                  <form action="/orders/confirm/<%= o._id %>" method="POST" class="d-inline">
                    <button class="btn btn-sm btn-primary">
                      <i class="fas fa-check-circle"></i> Đã nhận hàng
                    </button>
                  </form>
                <% } else { %>
                  <span class="text-muted">–</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
