<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #b2ebf2, #fceabb);
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }
        .table-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            padding: 25px;
            max-width: 1200px;
            margin: auto;
        }
        h2 {
            color: #039be5;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }
        th {
            background-color: #b2ebf2;
            color: #333;
        }
        .status-form {
            display: flex;
            gap: 8px;
            align-items: center;
        }
        .btn-update {
            background-color: #4caf50;
            color: white;
            border: none;
        }
        .btn-update:hover {
            background-color: #388e3c;
        }
        .order-items {
            font-size: 0.95rem;
        }
        .order-items ul {
            padding-left: 18px;
            margin-bottom: 0;
        }
        .order-items li {
            margin-bottom: 2px;
        }
    </style>
</head>
<body>
    <a href="/admin/Home" class="btn btn-secondary mb-3">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
    <div class="table-card">
        <h2>ðŸ“¦ Order Management</h2>
        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Order ID</th>
                    <th>User</th>
                    <th>Items</th>
                    <th>Total Price</th>
                    <th>Address</th>
                    <th>Payment</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach((order, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= order._id %></td>
                        <td><%= order.userId ? order.userId.username : 'N/A' %></td>
                        <td class="order-items">
                            <ul>
                                <% order.items.forEach(item => { %>
                                    <li>
                                        <%= item.productId ? item.productId.name : 'N/A' %> x <%= item.quantity %>
                                    </li>
                                <% }) %>
                            </ul>
                        </td>
                        <td><%= order.totalPrice.toLocaleString() %></td>
                        <td><%= order.address %></td>
                        <td><%= order.paymentMethod %></td>
                        <td>
                            <form class="status-form" action="/admin/orders/update/<%= order._id %>" method="POST">
                                <select name="status" class="form-select form-select-sm">
                                    <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                    <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                                    <option value="Shipping" <%= order.status === 'Shipping' ? 'selected' : '' %>>Shipping</option>
                                    <option value="Completed" <%= order.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                                    <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                                </select>
                                <button type="submit" class="btn btn-update btn-sm">Update</button>
                            </form>
                        </td>
                        <td><%= new Date(order.createdAt).toLocaleString() %></td>
                        <td>
                            <!-- Future: Add more actions here -->
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html> 