<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Users</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <!-- AOS -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(to right, #fceabb, #f8b500);
            font-family: 'Segoe UI', sans-serif;
            padding: 40px;
        }

        .table-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            padding: 25px;
            max-width: 1200px;
            margin: auto;
        }

        h2 {
            color: #f57c00;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }

        table {
            border-radius: 10px;
            overflow: hidden;
        }

        th {
            background-color: #f8b500;
            color: white;
        }

        .btn-edit {
            background-color: #81c784;
            border: none;
        }

        .btn-delete {
            background-color: #e57373;
            border: none;
        }

        .btn-edit:hover {
            background-color: #66bb6a;
        }

        .btn-delete:hover {
            background-color: #ef5350;
        }

        .admin-badge {
            background-color: #ff7043;
            color: white;
            padding: 4px 8px;
            border-radius: 10px;
            font-size: 0.8rem;
        }

        .customer-badge {
            background-color: #64b5f6;
            color: white;
            padding: 4px 8px;
            border-radius: 10px;
            font-size: 0.8rem;
        }
    </style>
</head>

<body>
    <a href="/admin/Home" class="btn btn-secondary mb-3">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
    <div class="table-card" data-aos="fade-up">
        <h2>ðŸ‘¥ User Management</h2>

        <table class="table table-striped table-hover align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Created At</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user, index)=> { %>
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <%= user.username %>
                        </td>
                        <td>
                            <% if (user.role==='admin' ) { %>
                                <span class="admin-badge">Admin</span>
                                <% } else { %>
                                    <span class="customer-badge">Customer</span>
                                    <% } %>
                        </td>
                        <td>
                            <%= new Date(user.createdAt).toLocaleDateString() %>
                        </td>
                        <td class="text-center">
                            <a href="/admin/users/edit/<%= user._id %>" class="btn btn-sm btn-edit me-2">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form id="deleteForm-<%= user._id %>" action="/admin/users/delete/<%= user._id %>" method="POST" class="d-inline">
                                <button type="button" class="btn btn-danger" onclick="confirmDelete('<%= user._id %>')">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- AOS Script -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>


    <script>
        function confirmDelete(userId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This user will be permanently deleted.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#aaa',
                confirmButtonText: 'Yes, delete it!',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById(`deleteForm-${userId}`).submit();
                }
            });
        }
    </script>

</body>

</html>